{
  "openapi": "3.0.1",
  "info": {
    "title": "EZLanguage",
    "version": "1.0.0",
    "description": "REST API designed to provide functions for ez language",
    "contact": {
      "email": "vinhphuc.it@gmail.com",
      "name": "Phuc Tran"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/ezlang/"
    }
  ],
  "tags": [
    {
      "name": "System",
      "description": "System APIs"
    }
  ],
  "paths": {
    "/health/check": {
      "get": {
        "tags": [
          "System"
        ],
        "summary": "Health Check",
        "operationId": "connect",
        "parameters": [
          {
            "in": "query",
            "name": "query",
            "schema": {
              "type": "string"
            },
            "description": "metric for detail information"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfull Operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthCheck"
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HealthCheck": {
        "type": "object",
        "$ref": "#/components/schemas/AppInfo"
      },
      "AppInfo": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "EZ Language"
          },
          "version": {
            "type": "string",
            "example": "1.0.0"
          },
          "host": {
            "type": "string",
            "example": "0.0.0.0"
          },
          "port": {
            "type": "string",
            "example": "3000"
          },
          "env": {
            "type": "string",
            "example": "dev"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "apiKeyAuth": {
        "type": "apiKey",
        "name": "apikey",
        "in": "header"
      }
    }
  }
}