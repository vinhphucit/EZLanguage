    "components": {
        "schemas": {
            "HealthCheck": {
                "type": "object",
                "$ref": "#/components/schemas/AppInfo"
            },
            "AppInfo": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "EZ Language"
                    },
                    "version": {
                        "type": "string",
                        "example": "1.0.0"
                    },
                    "host": {
                        "type": "string",
                        "example": "0.0.0.0"
                    },
                    "port": {
                        "type": "string",
                        "example": "3000"
                    },
                    "env": {
                        "type": "string",
                        "example": "dev"
                    }
                }
            },
            "SignInRequest": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "SignInResponse": {
                "type": "object",
                "properties": {
                    "accessToken": {
                        "type": "string"
                    },
                    "accessTokenExpiresAt": {
                        "type": "number"
                    },
                    "refreshToken": {
                        "type": "string"
                    },
                    "refreshTokenExpiresAt": {
                        "type": "number"
                    }
                }
            },
            "SignUpRequest": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "firstName": {
                        "type": "string"
                    },
                    "lastName": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "address": {
                        "type": "string"
                    },
                    "mobile": {
                        "type": "string"
                    }
                }
            },
            "VerifyEmailRequest": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "code": {
                        "type": "string"
                    }
                }
            },
            "ResetPasswordRequest": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    }
                }
            },
            "ConfirmResetPasswordRequest": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "token": {
                        "type": "string"
                    }
                }
            },
            "RefreshTokenRequest": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string"
                    }
                }
            },
            "SignOutRequest": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string"
                    }
                }
            },
            "ChangePasswordRequest": {
                "type": "object",
                "properties": {
                    "userId": {
                        "type": "string"
                    },
                    "oldPassword": {
                        "type": "string"
                    },
                    "newPassword": {
                        "type": "string"
                    }
                }
            },
            "UserRoleRequest": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    }
                }
            },
            "CreateUserRequest": {
                "type": "object",
